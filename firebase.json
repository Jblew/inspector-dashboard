{
  "database": {
    "rules": "database-rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public/inspector-widget-vue/dist",
    "predeploy": [
      "npm --prefix \"public/roles\" run build",
      "npm --prefix \"public/inspector-widget-vue\" run build",
      "mv public/roles/dist public/inspector-widget-vue/roles"
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "database": {
      "port": 9000
    }
  },
  "firestore": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR/..\" run build"],
    "rules": "firestore/deploy.firestore.rules",
    "indexes": "firestore/firestore.indexes.json"
  }
}
